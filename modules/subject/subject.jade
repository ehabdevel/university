extends ../../views/layout

block title
  title= title

block content
  +header(title)
  
  section
    p= summary
  
  section.lessons
    each article in lessons
      - var actions = {'lesson': text.lessons/*, 'test': text.tests*/};
      - article.parent = _id;
      +preview('lesson', article, actions)
  
  if user && user.over(100)
    section.add
      button.add.lesson.icon-plus= text.add

    template.add
      +preview('lesson', { parent: _id })
